<div class="row">
  <div class="col-xs-12">
</div>

<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<form class="form-horizontal">
  <div class="form-group">
  <%= f.label :status, 'task' %>
  <%= f.text_field :status, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :content, 'status' %>
  <%= f.text_field :content, class: 'form-control' %>
  </div>

  <%= f.submit '投稿', class: 'btn btn-primary' %>
<% end %>
</div>
</div>
</form>