<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, 'task' %>
  <%= f.text_field :status %>

  <%= f.label :content, 'status' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>